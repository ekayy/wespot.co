<div id="place-nav">
  <div id="place-title">
    <%= image_tag 'http://www.izakayamoku.com/images/Logo_Izakaya_blk_lg.jpg' %>
    <h1><%# link_to @place.name, place_path %></h1>
  </div>
  <nav id="place-links">
    <ul class="place-main">
      <li><a href ="#" id="toggleGrid">Photo</a></li>
      <li><%= link_to 'Menu', menu_place_path %></li>
      <li><a href ="#">Contact</a></li>
    </ul>
  </nav>

  <div class="place-info">
    <button>Make Reservation</button>

    <ul class="place-contact">
      <li><a href ="#">(408) 355-3586</a></li>
      <li><a href ="#"><address>1470 38th Ave</address></a></li>
      <li><a href ="#">Hours</a>
        <table>
          <tbody>
            <% (-1..5).each do |i| %>
            <tr>
              <td style="width:35%;"><%= ApplicationHelper::WeekDay[i+1] %></td>

                <td><% if @place.business_hours[i].open_time.present? %>
                <%= @place.business_hours[i].open_time.strftime("%l:%M%p") %>
                <%else%>
                Closed
                <%end%> -
              <% if @place.business_hours[i].close_time.present? %>
                <%= @place.business_hours[i].close_time.strftime("%l:%M%p") %>
                <%else%>
                Closed
                <%end%></td>

            </tr>
            <% end %>
          </tbody>
        </table>
      </li>
    </ul>

    <p>Accepts Visa, MasterCard, Amex.</p>
  </div>
</div>