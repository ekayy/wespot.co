<div id="place-nav-bg"></div>
<div id="place-nav">
<% if params[:id].present? %>
  <div id="place-title">
    <h1><%= link_to @place.name, place_path(@place) %></h1>
  </div>
  <nav id="place-links">
    <ul class="place-main">
      <li><%= link_to 'Menu', menu_place_path(@place) %></li>
      <li><a href ="#">Contact</a></li>
    </ul>
  </nav>
<% else %>
  <div id="place-title">
    <h1><%= link_to @place.name, root_url %></h1>
  </div>
  <nav id="place-links">
    <ul class="place-main">
      <li><%= link_to 'Menu', root_url+'menu' %></li>
      <li><a href ="#">Contact</a></li>
      </ul>
  </nav>
<% end %>


  <div class="place-info">
    <div class="cta"><a href="#">Make Reservation</a></div>

    <div class="place-contact">
      <div class="place-hours">
        <%= render 'hours' %>
      </div>
      <div>Accepts Visa, MasterCard, Amex.</div>
      <div><%= link_to number_to_phone(@place.phone), "tel:+" + @place.phone if @place.phone %></div>
      <div><%= link_to @place.address, 'http://maps.google.com/?q='+ @place.address, :target => "_blank" if @place.address %></div>
    </div>
  </div>
</div>
